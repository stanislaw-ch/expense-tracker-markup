block content
  section.search
    input(type='text' name='search' placeholder='Search by category')
    a.search__close-btn

  section.transaction
    div.transaction__title
      h2 Transactions
      //- p Add
      p.transaction__dialog-btn Add
    .transaction__dialog-wrapper
      .transaction__dialog.transaction__dialog--hidden.transaction__dialog--fade-out
          input(type='text' name='sum' placeholder='Enter an amount')
          select
            option(value='Car') Car
            option(value='Health') Health
            option(value='Supermarket') Supermarket
            option(value='Hobbies') Hobbies
          select
            option(value='N26') N26
            option(value='Cash') Cash
          input(type='date' name='date' value='25.10.2021')
          .transaction__dialog-type-wrapper
            div.transaction__dialog-type
              input(type='checkbox' id="type" name='type')
              label(for="type") Income
          button.button Create

  section.balance
    .balance__container
      div
        p Your balance
        p.balance__amount 3500 &#128
